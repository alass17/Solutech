<div class="container">
  <% @cart.orderables.each do |orderable| %>
    <% produit = orderable.produit %>
    <div id="<%= "cart-#{produit.id}" %>" class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h5 class="card-title"><%= produit.nom %></h5>
            <p class="card-text"><%= produit.description %></p>
          </div>
          <div class="col-md-3">
            <p class="card-text"><strong>Price:</strong> <%= produit.prix %></p>
            <%= form_with(url: cart_add_path) do |f| %>
              <%= f.hidden_field :id, value: produit.id %>
              <%= f.number_field :quantity, value: orderable.quantity, min: 0, class: "form-control" %>
              <%= f.submit "Update", class: "btn btn-primary mt-2" %>
            <% end %>
          </div>
          <div class="col-md-3 text-right">
            <p class="card-text"><strong>Total:</strong> <%= orderable.total %></p>
            <%= form_with(url: cart_remove_path) do |f| %>
              <%= f.hidden_field :id, value: orderable.id %>
              <%= f.submit "Remove", class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
