<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card w-50 mx-auto">
        <% if @category.image.attached? %>
          <%= image_tag @category.image, class: "card-img-top", style: "object-fit: cover; height: 300px;" %>
        <% end %>
        <div class="card-body">
          <h3 class="card-title"><%= @category.nom %></h3>
          <p class="card-text"><%= @category.description %></p>
        </div>
        <% if current_user.admin %>
          <div class="card-footer ">
          <div class="mx-auto">
            <%= link_to 'Modifier', edit_category_path(@category), class: 'btn btn-primary me-2 text-white ' %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Retour', categories_path, class: 'btn btn-secondary text-white' %>
  </div>
</div>
