<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nom %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Lire plus', category %></td>
        <%if current_user.admin %>
        <td><%= link_to 'Modifier', edit_category_path(category) %></td>
        <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Etes vous sÃ»re?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.admin %>
<%= link_to 'Nouvelle categorie', new_category_path %>
<% end %>