

<h1>Produits</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Prix</th>
      <th>Stock</th>
      <th>Categorie du produit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produits.each do |produit| %>
      <tr>
        <td><%= produit.nom %></td>
        <td><%= produit.description %></td>
        <td><%= produit.prix %></td>
        <td><%= produit.stock %></td>
        <td><%= produit.categorie.nom %></td>
        <td><%= link_to 'Lire plus', produit %></td>
        <% if current_user.admin %>
        <td><%= link_to 'Modifier', edit_produit_path(produit) %></td>
        <td><%= link_to 'Supprimer', produit, method: :delete, data: { confirm: 'Etes vous sÃ»re?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.admin %>
<%= link_to 'Nouveau produit', new_produit_path %>
<% end %>