<div class="container" style="margin-top:100px;">
<div class="row show">

<div class="col-md-6 colshow ">
<div class="col ">
<%= image_tag (@produit.image), class: "card-img-top", style: "object-fit: cover; height: 246px; width:246px" %>
</div>

<div class="col" style="margin-left:20px ;margin-top:20px; margin-bottom:10px" >

<div class="">
  <strong>Nom:</strong>
  <%= @produit.nom %>
</div>

<div >
  <strong>Description:</strong>
  <%= @produit.description %>
</div>

<div>
<strong>Prix:</strong> 
<%= @produit.prix %>
</div>

<div class"categorie" style= "margin-bottom:10px">
  <strong>Categorie:</strong>
  <%= @produit.categorie.nom %>
</div>

<%= form_with(url: cart_add_path) do |f| %>
  <%= f.hidden_field :id, value: @produit.id %>
  <%= f.number_field :quantity, value: 0, min: 1 , class: "small-number-field" %>
  <%= f.submit "Add To Cart", class: "btn btn-primary", style:"margin-top:-7px ;" %>
<% end %>
<%if current_user.admin %>
<%= link_to 'Modifier', edit_produit_path(@produit) , class:"btn btn-primary mt-2 text-white"%> 
<% end %>

</div>
</div>
</div>

<%= link_to 'Retour', produits_path %>
 </div>