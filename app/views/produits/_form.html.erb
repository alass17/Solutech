
<div class="w-25 p-3 mx-auto">
<%= form_with(model: produit, local: true) do |form| %>
  <% if produit.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(produit.errors.count, "error") %> prohibited this product from being saved:</h4>
      <ul>
        <% produit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nom, class: "form-label" %>
    <%= form.text_field :nom, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :prix, class: "form-label" %>
      <%= form.text_field :prix, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= form.label :stock, class: "form-label" %>
      <%= form.number_field :stock, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :categorie_id, "Catégorie", class: "form-label" %>
    <%= form.collection_select :categorie_id, Categorie.all, :id, :nom, { prompt: "Sélectionnez une catégorie" }, class: "form-select" %>
  </div>

  <%#= render "image_preview", form: form, produit: produit #%>
  
  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Enregistrer", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

</div>